@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="text-gradient mb-2">
                <i class="bi bi-speedometer2 me-2"></i>Dashboard
            </h1>
            <p class="text-secondary mb-0">Welcome to your content management system</p>
        </div>
        <div>
            <a href="@Url.Action("Create", "Posts")" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>New Post
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-5">
        <div class="col-xl-3 col-md-6">
            <div class="stats-card">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="bi bi-journal-text display-4 text-gradient"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="stats-number">@ViewBag.TotalPosts</div>
                        <p class="text-secondary mb-0">Total Posts</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="stats-card">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="bi bi-check-circle display-4 text-success"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="stats-number">@ViewBag.PublishedPosts</div>
                        <p class="text-secondary mb-0">Published</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="stats-card">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="bi bi-people display-4 text-gradient"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="stats-number">@ViewBag.TotalUsers</div>
                        <p class="text-secondary mb-0">Users</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="stats-card">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="bi bi-folder display-4 text-gradient"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="stats-number">@ViewBag.TotalCategories</div>
                        <p class="text-secondary mb-0">Categories</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Stats -->
    <div class="row g-4 mb-5">
        <div class="col-xl-3 col-md-6">
            <div class="stats-card">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="bi bi-tags display-4 text-gradient"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="stats-number">@ViewBag.TotalTags</div>
                        <p class="text-secondary mb-0">Tags</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="stats-card">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="bi bi-file-text display-4 text-gradient"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="stats-number">@ViewBag.TotalPages</div>
                        <p class="text-secondary mb-0">Pages</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="stats-card">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="bi bi-images display-4 text-gradient"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="stats-number">@ViewBag.TotalMedia</div>
                        <p class="text-secondary mb-0">Media Files</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="stats-card">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="bi bi-pencil display-4 text-warning"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="stats-number">@ViewBag.DraftPosts</div>
                        <p class="text-secondary mb-0">Drafts</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row g-4">
        <!-- Recent Posts -->
        <div class="col-lg-6">
            <div class="glass-card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-journal-text me-2"></i>Recent Posts
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentPosts != null && ((List<CodexCMS.Core.Models.Post>)ViewBag.RecentPosts).Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var post in (List<CodexCMS.Core.Models.Post>)ViewBag.RecentPosts)
                            {
                                <div class="list-group-item bg-transparent border-0 px-0">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">
                                                <a href="@Url.Action("Edit", "Posts", new { id = post.Id })" class="text-decoration-none">
                                                    @post.Title
                                                </a>
                                            </h6>
                                            <small class="text-muted">
                                                <i class="bi bi-person me-1"></i>@post.Author?.Username
                                                <span class="mx-2">â€¢</span>
                                                <i class="bi bi-calendar me-1"></i>@post.CreatedAt.ToString("MMM dd, yyyy")
                                            </small>
                                        </div>
                                        <span class="badge bg-@(post.Status == CodexCMS.Core.Models.PostStatus.Published ? "success" : "warning")">
                                            @post.Status
                                        </span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-secondary text-center py-3">No posts yet</p>
                    }
                    <div class="text-center mt-3">
                        <a href="@Url.Action("Index", "Posts")" class="btn btn-primary btn-sm">
                            View All Posts
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Users -->
        <div class="col-lg-6">
            <div class="glass-card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-people me-2"></i>Recent Users
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentUsers != null && ((List<CodexCMS.Core.Models.User>)ViewBag.RecentUsers).Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var user in (List<CodexCMS.Core.Models.User>)ViewBag.RecentUsers)
                            {
                                <div class="list-group-item bg-transparent border-0 px-0">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            <div class="flex-shrink-0">
                                                <i class="bi bi-person-circle display-6 text-gradient"></i>
                                            </div>
                                            <div class="flex-grow-1 ms-3">
                                                <h6 class="mb-0">@user.Username</h6>
                                                <small class="text-muted">@user.Email</small>
                                            </div>
                                        </div>
                                        <span class="badge bg-primary">@user.Role</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-secondary text-center py-3">No users yet</p>
                    }
                    <div class="text-center mt-3">
                        <a href="@Url.Action("Index", "Users")" class="btn btn-primary btn-sm">
                            View All Users
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row g-4 mt-4">
        <div class="col-12">
            <div class="glass-card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <a href="@Url.Action("Create", "Posts")" class="btn btn-primary w-100">
                                <i class="bi bi-plus-circle me-2"></i>New Post
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Create", "Pages")" class="btn btn-secondary w-100">
                                <i class="bi bi-file-plus me-2"></i>New Page
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Create", "Categories")" class="btn btn-success w-100">
                                <i class="bi bi-folder-plus me-2"></i>New Category
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Index", "Media")" class="btn btn-info w-100">
                                <i class="bi bi-upload me-2"></i>Upload Media
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 