@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 fade-in-up">
                <h1 class="display-4 fw-bold text-gradient mb-4">
                    Welcome to CodexCMS
                </h1>
                <p class="lead text-secondary mb-4">
                    A modern content management system with beautiful liquid glass design. 
                    Create, manage, and publish your content with ease.
                </p>
                <div class="d-flex gap-3">
                    <a href="@Url.Action("Index", "Blog")" class="btn btn-primary btn-lg">
                        <i class="bi bi-journal-text me-2"></i>Read Blog
                    </a>
                    <a href="@Url.Action("Register", "Auth")" class="btn btn-secondary btn-lg">
                        <i class="bi bi-person-plus me-2"></i>Get Started
                    </a>
                </div>
            </div>
            <div class="col-lg-6 fade-in-up" style="animation-delay: 0.2s;">
                <div class="glass-card p-4 text-center">
                    <i class="bi bi-code-slash display-1 text-gradient"></i>
                    <h3 class="mt-3">Modern CMS</h3>
                    <p class="text-secondary">Built with ASP.NET Core and beautiful UI</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Posts Section -->
@if (ViewBag.FeaturedPosts != null && ((List<CodexCMS.Core.Models.Post>)ViewBag.FeaturedPosts).Any())
{
    <section class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h2 class="text-center text-gradient mb-5">
                        <i class="bi bi-star me-2"></i>Featured Posts
                    </h2>
                </div>
            </div>
            <div class="row g-4">
                @foreach (var post in (List<CodexCMS.Core.Models.Post>)ViewBag.FeaturedPosts)
                {
                    <div class="col-lg-4 col-md-6 fade-in-up">
                        <div class="post-card h-100">
                            @if (!string.IsNullOrEmpty(post.FeaturedImageUrl))
                            {
                                <img src="@post.FeaturedImageUrl" class="post-image" alt="@post.Title">
                            }
                            <div class="post-content">
                                <h5 class="post-title">
                                    <a href="@Url.Action("Details", "Blog", new { slug = post.Slug })" class="text-decoration-none">
                                        @post.Title
                                    </a>
                                </h5>
                                <p class="post-excerpt">@post.Excerpt</p>
                                <div class="post-meta">
                                    <i class="bi bi-person me-1"></i>@post.Author?.Username
                                    <span class="mx-2">â€¢</span>
                                    <i class="bi bi-calendar me-1"></i>@post.PublishedAt?.ToString("MMM dd, yyyy")
                                </div>
                                @if (post.Category != null)
                                {
                                    <div class="mt-2">
                                        <span class="tag">@post.Category.Name</span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

<!-- Categories Section -->
@if (ViewBag.Categories != null && ((List<CodexCMS.Core.Models.Category>)ViewBag.Categories).Any())
{
    <section class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h2 class="text-center text-gradient mb-5">
                        <i class="bi bi-folder me-2"></i>Categories
                    </h2>
                </div>
            </div>
            <div class="row g-4">
                @foreach (var category in (List<CodexCMS.Core.Models.Category>)ViewBag.Categories)
                {
                    <div class="col-lg-4 col-md-6 fade-in-up">
                        <div class="glass-card p-4 text-center h-100">
                            @if (!string.IsNullOrEmpty(category.ImageUrl))
                            {
                                <img src="@category.ImageUrl" class="img-fluid rounded mb-3" alt="@category.Name" style="max-height: 150px;">
                            }
                            else
                            {
                                <i class="bi bi-folder display-4 text-gradient mb-3"></i>
                            }
                            <h4>@category.Name</h4>
                            <p class="text-secondary">@category.Description</p>
                            <a href="@Url.Action("Category", "Blog", new { slug = category.Slug })" class="btn btn-primary">
                                View Posts
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

<!-- Stats Section -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-3 col-md-6 fade-in-up">
                <div class="stats-card">
                    <i class="bi bi-journal-text display-4 text-gradient mb-3"></i>
                    <div class="stats-number">@(((List<CodexCMS.Core.Models.Post>)ViewBag.FeaturedPosts)?.Count ?? 0)</div>
                    <p class="text-secondary">Featured Posts</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 fade-in-up" style="animation-delay: 0.1s;">
                <div class="stats-card">
                    <i class="bi bi-folder display-4 text-gradient mb-3"></i>
                    <div class="stats-number">@(((List<CodexCMS.Core.Models.Category>)ViewBag.Categories)?.Count ?? 0)</div>
                    <p class="text-secondary">Categories</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 fade-in-up" style="animation-delay: 0.2s;">
                <div class="stats-card">
                    <i class="bi bi-people display-4 text-gradient mb-3"></i>
                    <div class="stats-number">1</div>
                    <p class="text-secondary">Active Users</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 fade-in-up" style="animation-delay: 0.3s;">
                <div class="stats-card">
                    <i class="bi bi-eye display-4 text-gradient mb-3"></i>
                    <div class="stats-number">100+</div>
                    <p class="text-secondary">Page Views</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-5">
    <div class="container">
        <div class="glass-card p-5 text-center">
            <h2 class="text-gradient mb-4">Ready to Get Started?</h2>
            <p class="lead text-secondary mb-4">
                Join our community and start creating amazing content with CodexCMS.
            </p>
            <div class="d-flex gap-3 justify-content-center">
                <a href="@Url.Action("Register", "Auth")" class="btn btn-primary btn-lg">
                    <i class="bi bi-person-plus me-2"></i>Create Account
                </a>
                <a href="@Url.Action("Contact", "Home")" class="btn btn-secondary btn-lg">
                    <i class="bi bi-envelope me-2"></i>Contact Us
                </a>
            </div>
        </div>
    </div>
</section> 