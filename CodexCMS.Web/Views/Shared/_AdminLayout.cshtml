<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="admin-sidebar" id="adminSidebar">
            <div class="p-3">
                <h4 class="text-gradient mb-4">
                    <i class="bi bi-code-slash me-2"></i>Admin Panel
                </h4>
                
                <nav class="nav flex-column">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")" 
                       asp-controller="Admin" asp-action="Dashboard">
                        <i class="bi bi-speedometer2 me-2"></i>Dashboard
                    </a>
                    
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Posts" ? "active" : "")" 
                       asp-controller="Posts" asp-action="Index">
                        <i class="bi bi-journal-text me-2"></i>Posts
                    </a>
                    
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Pages" ? "active" : "")" 
                       asp-controller="Pages" asp-action="Index">
                        <i class="bi bi-file-text me-2"></i>Pages
                    </a>
                    
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Categories" ? "active" : "")" 
                       asp-controller="Categories" asp-action="Index">
                        <i class="bi bi-folder me-2"></i>Categories
                    </a>
                    
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Tags" ? "active" : "")" 
                       asp-controller="Tags" asp-action="Index">
                        <i class="bi bi-tags me-2"></i>Tags
                    </a>
                    
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Media" ? "active" : "")" 
                       asp-controller="Media" asp-action="Index">
                        <i class="bi bi-images me-2"></i>Media
                    </a>
                    
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Menus" ? "active" : "")" 
                       asp-controller="Menus" asp-action="Index">
                        <i class="bi bi-list me-2"></i>Menus
                    </a>
                    
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Users" ? "active" : "")" 
                       asp-controller="Users" asp-action="Index">
                        <i class="bi bi-people me-2"></i>Users
                    </a>
                    
                    <hr class="my-3">
                    
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house me-2"></i>View Site
                    </a>
                    
                    <a class="nav-link" asp-controller="Auth" asp-action="Logout">
                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                    </a>
                </nav>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1">
            <!-- Top Navigation -->
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <button class="btn btn-secondary d-lg-none" type="button" onclick="toggleSidebar()">
                        <i class="bi bi-list"></i>
                    </button>
                    
                    <div class="ms-auto">
                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i>@User.Identity?.Name
                            </a>
                            <ul class="dropdown-menu glass">
                                <li><a class="dropdown-item" href="#">
                                    <i class="bi bi-person me-2"></i>Profile
                                </a></li>
                                <li><a class="dropdown-item" href="#">
                                    <i class="bi bi-gear me-2"></i>Settings
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                                </a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Page Content -->
            <div class="admin-content">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('adminSidebar');
            sidebar.classList.toggle('show');
        }
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 