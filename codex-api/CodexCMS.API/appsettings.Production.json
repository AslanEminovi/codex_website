{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/app/data/CodexCMS.db"
  },
  "Jwt": {
    "Key": "${JWT_SECRET_KEY}",
    "Issuer": "CodexCMS.API",
    "Audience": "CodexCMS.Frontend",
    "ExpiryInMinutes": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*"
} 